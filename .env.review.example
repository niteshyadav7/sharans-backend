# Review Moderation Configuration

# Auto-approve reviews (true) or require manual approval (false)
REVIEW_AUTO_APPROVE=true

# Minimum comment length (characters)
REVIEW_MIN_COMMENT_LENGTH=10

# Maximum comment length (characters)
REVIEW_MAX_COMMENT_LENGTH=1000

# Maximum title length (characters)
REVIEW_MAX_TITLE_LENGTH=100

# Maximum review images per review
REVIEW_MAX_IMAGES=5

# Enable profanity filter (requires additional package)
REVIEW_PROFANITY_FILTER=false

# Minimum rating (1-5)
REVIEW_MIN_RATING=1

# Maximum rating (1-5)
REVIEW_MAX_RATING=5

# Allow reviews from non-verified purchases
REVIEW_ALLOW_NON_VERIFIED=true

# Require minimum order value for reviews (in currency)
REVIEW_MIN_ORDER_VALUE=0

# Days after delivery to allow reviews (0 = unlimited)
REVIEW_DAYS_AFTER_DELIVERY=90

# Enable helpful votes
REVIEW_ENABLE_HELPFUL_VOTES=true

# Enable admin responses
REVIEW_ENABLE_ADMIN_RESPONSES=true

# Email notifications for new reviews (admin)
REVIEW_NOTIFY_ADMIN=true

# Email notifications for admin responses (user)
REVIEW_NOTIFY_USER_ON_RESPONSE=true
